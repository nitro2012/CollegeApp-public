<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.collegeapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollegeApp">
        <activity android:name=".ebook.pdfViewer"></activity>
        <activity android:name=".Student.StudentPanel" />
        <activity
            android:name=".AboutNavigation"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Student.AddStudent" />
        <activity android:name=".Faculty.ShareClass" />
        <activity android:name=".Faculty.viewClass" />
        <activity android:name=".Faculty.AddClass" />
        <activity android:name=".ebook.EbookActivity" />
        <activity android:name=".FullPage" />
        <activity
            android:name=".PolicyNavigation"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ImageGallery"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".notice.DeleteNoticeActivity" />
        <activity android:name=".Faculty.UpdateTeacherActivity" />
        <activity
            android:name=".Faculty.FacultyPanel"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Faculty.AddTeacher"
            android:parentActivityName=".Faculty.UpdateFaculty" />
        <activity
            android:name=".Faculty.UpdateFaculty"
            android:parentActivityName=".AdminPanel" />
        <activity
            android:name=".UploadPdf"
            android:parentActivityName=".AdminPanel" />
        <activity
            android:name=".UploadImage"
            android:parentActivityName=".AdminPanel" />
        <activity
            android:name=".notice.UploadNotice"
            android:parentActivityName=".AdminPanel" />
        <activity
            android:name=".AdminPanel"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LoginPage"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>